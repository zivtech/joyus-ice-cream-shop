{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://joyus.ai/schemas/interface-manifest.schema.json",
  "title": "Interface Manifest",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "owner",
    "status",
    "transport",
    "contracts",
    "consumers",
    "source_refs",
    "adr_refs",
    "validation"
  ],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "owner": { "type": "string", "minLength": 1 },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "deprecated"]
    },
    "transport": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["api", "mcp", "script"]
      }
    },
    "contracts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "kind", "operation"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "kind": {
            "type": "string",
            "enum": ["http_endpoint", "mcp_tool", "script_entrypoint"]
          },
          "operation": { "type": "string", "minLength": 1 },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
          },
          "path": { "type": "string", "minLength": 1 },
          "tool": { "type": "string", "minLength": 1 },
          "script": { "type": "string", "minLength": 1 },
          "notes": { "type": "string" }
        }
      }
    },
    "consumers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["surface", "purpose"],
        "additionalProperties": false,
        "properties": {
          "surface": { "type": "string", "minLength": 1 },
          "purpose": { "type": "string", "minLength": 1 }
        }
      }
    },
    "source_refs": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "adr_refs": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "validation": {
      "type": "object",
      "required": ["basis", "state", "notes", "reviewed_on", "reviewer"],
      "additionalProperties": false,
      "properties": {
        "basis": {
          "type": "string",
          "enum": ["as_built_observation", "approved_product_decision"]
        },
        "state": {
          "type": "string",
          "enum": ["unreviewed", "validated_useful", "needs_redesign", "remove_candidate"]
        },
        "notes": { "type": "string", "minLength": 1 },
        "reviewed_on": { "type": "string", "format": "date" },
        "reviewer": { "type": "string", "minLength": 1 }
      }
    }
  }
}
