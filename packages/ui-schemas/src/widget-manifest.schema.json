{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://joyus.ai/schemas/widget-manifest.schema.json",
  "title": "Widget Manifest",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "owner",
    "source_files",
    "data_inputs",
    "calculation_rules",
    "visual_rules",
    "interactions",
    "states",
    "dependencies",
    "adr_refs",
    "status"
  ],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "owner": { "type": "string", "minLength": 1 },
    "source_files": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },
    "data_inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "path", "kind"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "path": { "type": "string" },
          "kind": { "type": "string" },
          "notes": { "type": "string" }
        }
      }
    },
    "calculation_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "formula_or_logic"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "formula_or_logic": { "type": "string" },
          "references": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "visual_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "logic"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "logic": { "type": "string" },
          "token_refs": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "interactions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["action", "effect"],
        "additionalProperties": false,
        "properties": {
          "action": { "type": "string" },
          "effect": { "type": "string" }
        }
      }
    },
    "states": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "name"],
        "additionalProperties": false,
        "properties": {
          "type": { "type": "string" },
          "name": { "type": "string" },
          "notes": { "type": "string" }
        }
      }
    },
    "adr_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "deprecated"]
    }
  }
}
